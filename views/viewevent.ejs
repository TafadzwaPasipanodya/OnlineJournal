<% include chunks/head %>
<% include chunks/nav_bar %>

<h4 id="event_name">
    <%= event.name %>
</h4>

<div id="event_controls">
<form method="post" action="/calendar/events/attend/<%=event._id%>">
    <fieldset>
        <input type="submit" value="I'm going!">
    </fieldset>
</form>
    
<% if (username === event.organizer) {%>
    <form method="post" action="/calendar/events/cancel/<%=event._id%>">
        <fieldset>
            <input type="submit" value="cancel event">
        </fieldset>
    </form>
<%}%>
</div>

<table id="attending">       
    <tr>
        <th>Going:</th>
    </tr>
    
    <% event.attending.forEach(function(person) { %>
        <tr>
            <td>
             <%= person.person %>
            </td>
        </tr>
    <%});%>
</table>

<% include chunks/foot %>